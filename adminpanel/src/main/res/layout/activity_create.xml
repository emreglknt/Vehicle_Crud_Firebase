<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/yellow"

    tools:context=".CreateActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"

            android:paddingBottom="10dp"/>


    <LinearLayout
        android:id="@+id/editlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp">




        <EditText
            android:id="@+id/createOwnerName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:hint="Enter owner name"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/purple"
            android:maxLength="15"
            android:imeOptions="actionNext"/>

        <EditText
           android:id="@+id/createBrand"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Enter vehicle brand"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:maxLength="15"/>

        <EditText
            android:id="@+id/vehicleRTO"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Enter vehicle RTO"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:maxLength="15"/>

        <EditText
            android:id="@+id/vehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Enter vehicle serial number"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:maxLength="15"/>

        <Button
            android:id="@+id/createSaveButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/purple"
            android:text="Save"
            android:textSize="18sp"
            app:cornerRadius="20dp" />

    </LinearLayout>

</LinearLayout>